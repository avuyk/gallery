{% extends 'form_base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}
{% block menuitemone %}
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
           aria-haspopup="true" aria-expanded="false">
            Categories
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            {% for category in categories %}
                <a class="dropdown-item" href="{{ path('show_images_from_category', {
                    categoryName: category.categoryName
                }) }}">{{ category.categoryName}}</a>
            {% endfor %}
        </div>
    </li>
{% endblock %}
{% block content_body %}
    <h1>{{ title }}</h1>
    {{ form_start(uploadForm) }}
    {{ form_row(uploadForm.imageFile, {
        'attr': {
            'placeholder': 'Select your image file'
        }
    }) }}
    {{ form_row(uploadForm.imageFileTitle) }}
    {{ form_row(uploadForm.imageFileDescription, {
        'attr': {
            'placeholder': 'What is the image about?'
        }
    }) }}
    {{ form_row(uploadForm.categories) }}
    <button type="submit" class="btn btn-primary">Upload</button>
    {{ form_end(uploadForm) }}
{% endblock %}
